<Window x:Class="NTauri.WPF.Window.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:NTauri.WPF.Window"
        mc:Ignorable="d"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="NTauri.Vue" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <wv2:WebView2 Grid.Row="1" Name="webView" 
                      Source="https://www.example.com"
                      CoreWebView2InitializationCompleted="WebView_CoreWebView2InitializationCompleted"/>
        <!-- <Button Grid.Row="0"  Width="200" Height="60" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Send">Send</Button> -->
    </Grid>
</Window>
